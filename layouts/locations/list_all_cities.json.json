{{ define "response" }}
  {{- $e := sort (where (where .Site.RegularPages "Type" "location") ".Params.state" "==" .Params.state) -}}
  {
    "section" : "locations",
    "state": "{{ .Params.state }}",
    "city": null,
    "permalink": "{{ .Permalink }}",
    "count" : "{{ len $e }}",
    "items" : [
    {{- range $i, $r := $e -}}
    {{- if $i -}}, {{- end -}}{{- partialCached "location.json" . .Params.state .Params.city .Params.slug -}}
    {{- end -}}
    ]
  }
{{ end }}
