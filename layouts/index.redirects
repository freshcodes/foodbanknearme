# Netlify redirects. See https://www.netlify.com/docs/redirects/

# redirect configured hosts to the primary host
{{ $h := .Site.Params.Host.Primary }}
{{ range $a := .Site.Params.Host.Redirects }}
https://{{ $a }}/*   https://{{ $h }}/:splat   301!
{{ end }}

# redirect any page aliases
{{ range $p := .Site.Pages }}
{{ range .Aliases }}
{{ . }}   {{ $p.RelPermalink }}   301!
{{ end }}
{{ end }}
