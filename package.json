{
  "name": "foodbanknear.me",
  "private": true,
  "scripts": {
    "clean:parcel": "rm -rf ./public",
    "dev:hugo": "hugo -DFv --cleanDestinationDir --gc --cacheDir .cache-hugo; onchange '{archetypes,content,data,layouts,static}/**/*.*' -p -- hugo -DFv --gc --cacheDir .cache-hugo",
    "prod:hugo": "hugo --config=config.toml,config.production.toml -v --cleanDestinationDir --gc --cacheDir .cache-hugo",
    "dev:parcel": "parcel watch './dist-hugo/**/*.html' --out-dir ./public --cache-dir .cache-parcel --no-autoinstall",
    "prod:parcel": "npm run clean:parcel && parcel build './dist-hugo/**/*.html' --out-dir ./public --cache-dir .cache-parcel --detailed-report --experimental-scope-hoisting",
    "prod:workbox": "workbox injectManifest",
    "prod:cms": "cp ./static/admin/config.yml ./public/admin/",
    "prod:netlify": "cp ./dist-hugo/_* ./public/ && cp ./dist-hugo/robots.txt ./public/ && cp ./dist-hugo/sitemap.xml ./public/",
    "prod:uncss": "find ./public -name app.*.css -print0 | xargs -0 -I out uncss -n -H ./public -o out './public/*.html'",
    "dev:serve": "static-server ./public",
    "dev": "run-p dev:lint dev:hugo dev:parcel dev:serve",
    "build": "HUGO_ENV=production NODE_ENV=production run-s prod:hugo prod:parcel prod:workbox prod:cms prod:netlify prod:uncss",
    "dev:lint": "onchange 'static/js/**/*.js' 'static/sw.js' -- npm run lint",
    "lint": "standard --fix 'static/js/**/*.js' 'static/sw.js'"
  },
  "dependencies": {
    "bulma": "^0.7.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "parcel-bundler": "^1.9.7",
    "postcss-preset-env": "^5.3.0",
    "uncss": "github:freshcodes/uncss#cli-output-file",
    "workbox-cli": "^3.4.1"
  },
  "devDependencies": {
    "standard": "^11.0.1",
    "static-server": "^2.2.1"
  },
  "standard": {
    "globals": [
      "importScripts",
      "workbox"
    ]
  }
}
